{
  "name": "vehicle-rental-system",
  "version": "1.0.0",
  "description": "Backend API for a Vehicle Rental System built with Node.js, TypeScript, Express, and PostgreSQL.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.server.json",
    "build:client": "npm --prefix client run build",
    "build:all": "npm run build && npm run build:client",
    "start": "node dist/index.js",
    "dev": "TS_NODE_PROJECT=tsconfig.server.json ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:client": "npm --prefix client run dev",
    "dev:all": "concurrently -k \"npm run dev\" \"npm run dev:client\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "ts-node-dev": "^2.0.0",
    "concurrently": "^9.1.0",
    "typescript": "^5.6.3"
  }
}
