// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String
  role      Role     @default(customer)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bookings  Booking[]

  @@map("users")
}

model Vehicle {
  id                  String   @id @default(uuid())
  vehicleName         String   @map("vehicle_name") // Mapped to match requirement if needed, or just camelCase in code
  type                String   // 'car', 'bike', 'van', 'SUV'
  registrationNumber  String   @unique @map("registration_number")
  dailyRentPrice      Float    @map("daily_rent_price")
  availabilityStatus  String   @default("available") @map("availability_status") // 'available', 'booked'
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  bookings            Booking[]

  @@map("vehicles")
}

model Booking {
  id            String   @id @default(uuid())
  userId        String   @map("customer_id")
  vehicleId     String   @map("vehicle_id")
  rentStartDate DateTime @map("rent_start_date")
  rentEndDate   DateTime @map("rent_end_date")
  totalPrice    Float    @map("total_price")
  status        String   @default("active") // 'active', 'cancelled', 'returned'
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  vehicle Vehicle @relation(fields: [vehicleId], references: [id])

  @@map("bookings")
}

enum Role {
  admin
  customer
}
